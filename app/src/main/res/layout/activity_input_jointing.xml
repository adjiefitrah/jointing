<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.jointing.WoActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:orientation="vertical">
        <ScrollView
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        app:srcCompat="@drawable/icon_wo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.13"
                            android:text="Kustan"
                            android:textColor="@color/colorBlack"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_jabatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.17"
                            android:gravity="bottom"
                            android:text="Pengawas (Distribusi)"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/txt_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.13"
                            android:text="Area Ciputat"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="WO (Work Order)"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                <TextView
                        android:id="@+id/txt_no_wo"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:text="WO DIS 54010001"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="No Seri"
                            android:theme="@style/ThemeEditTextLight" />
                    <EditText
                            android:id="@+id/txt_no_seri"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:inputType="textPersonName"
                            android:hint="123123"
                            android:theme="@style/ThemeEditTextLight"
                            android:textColor="@color/colorBlack"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Merk"
                            android:theme="@style/ThemeEditTextLight" />
                    <Spinner
                            android:id="@+id/spin_merk"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:entries="@array/spin_sktm"
                            android:popupBackground="@color/cardview_light_background"
                            android:theme="@style/ThemeEditTextLight" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/top_input_wo"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Tipe"
                        android:theme="@style/ThemeEditTextLight" />

                    <Spinner
                            android:id="@+id/spin_tipe"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:entries="@array/spin_tipe"
                            android:popupBackground="@color/cardview_light_background"
                            android:theme="@style/ThemeEditTextLight" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/top_input_wo"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Konektor"
                            android:theme="@style/ThemeEditTextLight" />
                    <Spinner
                            android:id="@+id/spin_konektor"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:entries="@array/spin_konektor"
                            android:popupBackground="@color/cardview_light_background"
                            android:theme="@style/ThemeEditTextLight" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Nama Jointer"
                            android:theme="@style/ThemeEditTextLight" />

                    <EditText
                        android:id="@+id/txt_nama_jointer"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Nama Jointer"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorBlack"
                        android:theme="@style/ThemeEditTextLight" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Koordinat X"
                            android:theme="@style/ThemeEditTextLight" />
                    <TextView
                            android:id="@+id/txt_koordinat_x"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="6.123123"
                            android:inputType="textPersonName"
                            android:theme="@style/ThemeEditTextLight" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                        android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Koordinat Y"
                            android:theme="@style/ThemeEditTextLight" />
                    <TextView
                            android:id="@+id/txt_koordinat_y"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="161.123123"
                            android:inputType="textPersonName"
                            android:theme="@style/ThemeEditTextLight" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Foto Sekitar"
                            android:theme="@style/ThemeEditTextLight" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/txt_foto_sekitar"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="a.jpg"
                            android:editable="false"
                            android:textColor="@color/colorBlack"
                           android:theme="@style/ThemeEditTextLight"/>
                        <Button
                            android:id="@+id/btn_foto_sekitar"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:text="Take Foto" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Foto Sesudah"
                        android:theme="@style/ThemeEditTextLight" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txt_foto_sesudah"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="a.jpg"
                            android:editable="false"
                            android:textColor="@color/colorBlack"
                            android:theme="@style/ThemeEditTextLight" />

                        <Button
                            android:id="@+id/btn_foto_sesudah"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:text="Take Foto" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Foto Label"
                        android:theme="@style/ThemeEditTextLight" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txt_foto_label"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="a.jpg"
                            android:editable="false"
                            android:textColor="@color/colorBlack"
                            android:theme="@style/ThemeEditTextLight" />

                        <Button
                            android:id="@+id/btn_foto_label"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:text="Take Foto" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Jenis Kabel"
                        android:theme="@style/ThemeEditTextLight" />

                    <Spinner
                        android:id="@+id/spin_jenis_kabel"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:entries="@array/spin_jenis_kabel"
                        android:popupBackground="@color/cardview_light_background"
                        android:theme="@style/ThemeEditTextLight" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Foto Eviden"
                        android:theme="@style/ThemeEditTextLight" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txt_foto_eviden"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="a.jpg"
                            android:editable="false"
                            android:textColor="@color/colorBlack"
                            android:theme="@style/ThemeEditTextLight" />

                        <Button
                            android:id="@+id/btn_foto_eviden"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:text="Take Foto" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Simpan" />
            </LinearLayout>
        </ScrollView>



    </LinearLayout>
</android.support.constraint.ConstraintLayout>
